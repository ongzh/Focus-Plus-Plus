{
  "name": "focus++",
  "description": "Chrome Extension to help users focus",
  "version": "2.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "timerXtension",
    "default_icon": "icon.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "alarms",
    "notifications",
    "contextMenus"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
